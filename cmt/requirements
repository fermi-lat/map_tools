package map_tools

version v1r1p4
author T. Burnett <tburnett@u.washington.edu>
# $Id: requirements,v 1.6 2004/02/25 19:10:31 burnett Exp $

use GlastPolicy *
use tuple *

use astro *
use pil   * IExternal
use facilities *

set INFILES  "$(MAP_TOOLSROOT)/data"
set PFILES   "$(MAP_TOOLSROOT)/pfiles"
set OUTFILES "$(MAP_TOOLSROOT)/output"
set TPLDIR   "$(MAP_TOOLSROOT)/Templates"


#temporary code for FITS table I/O and keyword handling
library table -no_share -s=table $(source)


apply_pattern GLAST_static_library_package
macro_append map_tools_linkopts " -l table " Win32 " $(map_toolsDir)/table.lib "
		
pattern ST_app \
  macro <name>_par "" WIN32 "<name>.par" ; \ 
  application <name> -s=<name> *.cxx  -s=../pfiles $(<name>_par)


apply_pattern ST_app name=count_map
apply_pattern ST_app name=exposure_cube
apply_pattern ST_app name=exposure_map
